{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m venv /venv && /venv/bin/pip install --upgrade pip && /venv/bin/pip install -e ."
  },
  "deploy": {
    "startCommand": "cd app && streamlit run main.py --server.port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
